doctype html
html(lang="en")
  body
    h1 Edit This Classroom Yo

    form(name="new-classroom", action= "/classrooms/#{classroom._id}/edit", method='post')
      label(for="name") Name
      input(name='name', type='text', id="name", value="#{classroom.name}")

      br
      label(for="numberOfSeats") Number Of Seats
      input(name="numberOfSeats", type='text', id="numberOfSeats", value="#{classroom.numberOfSeats}")

      br
      label(for="hasKeg") Has Keg
      input(type="checkbox", name="hasKeg", id="hasKeg", checked=(classroom.hasKeg ? "checked" : undefined))

      br
      br
      input(type="submit", value="submit")
